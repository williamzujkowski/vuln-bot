{
  "name": "vuln-bot",
  "version": "1.0.0",
  "description": "Morning Vuln Briefing - Automated vulnerability intelligence platform",
  "private": true,
  "scripts": {
    "build": "npm run build:ts && eleventy",
    "build:ts": "webpack --mode=production",
    "build:ts:dev": "webpack --mode=development --watch",
    "serve": "npm run build:ts:dev & eleventy --serve",
    "clean": "rimraf public dist",
    "lint": "eslint 'src/**/*.{js,ts}' --fix && tsc --noEmit",
    "lint:js": "eslint 'src/**/*.js' --fix",
    "lint:ts": "eslint 'src/**/*.ts' --fix && tsc --noEmit",
    "format": "prettier --write 'src/**/*.{js,ts,json,css,md}'",
    "precommit": "lint-staged",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "prepare": "husky install",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "vulnerability",
    "security",
    "cve",
    "11ty",
    "static-site"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@testing-library/jest-dom": "^6.1.5",
    "@types/alpinejs": "^3.13.11",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.56.0",
    "eslint-config-google": "^0.14.0",
    "husky": "^8.0.3",
    "jsdom": "^23.0.1",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.4",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "alpinejs": "^3.13.3",
    "fuse.js": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ],
    "*.py": [
      "ruff check --fix",
      "ruff format"
    ]
  }
}
