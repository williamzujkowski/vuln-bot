{#- SVG icon component with accessibility support -#}
{%- set iconName = name or "info" -%}
{%- set iconClass = class or "" -%}
{%- set iconSize = size or "24" -%}
{%- set iconLabel = label or "" -%}
{%- set iconRole = role or ("img" if iconLabel else "presentation") -%}

<svg 
  class="icon icon-{{ iconName }} {{ iconClass }}"
  width="{{ iconSize }}"
  height="{{ iconSize }}"
  role="{{ iconRole }}"
  {% if iconLabel %}aria-label="{{ iconLabel }}"{% else %}aria-hidden="true"{% endif %}
  focusable="false"
>
  {% if iconName == "chevron-up" %}
    <path d="M7 14l5-5 5 5z" fill="currentColor"/>
  {% elif iconName == "chevron-down" %}
    <path d="M7 10l5 5 5-5z" fill="currentColor"/>
  {% elif iconName == "search" %}
    <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z" fill="currentColor"/>
  {% elif iconName == "export" %}
    <path d="M19 12v7H5v-7H3v7c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2v-7h-2zm-6 .67l2.59-2.58L17 11.5l-5 5-5-5 1.41-1.41L11 12.67V3h2v9.67z" fill="currentColor"/>
  {% elif iconName == "filter" %}
    <path d="M10 18h4v-2h-4v2zM3 6v2h18V6H3zm3 7h12v-2H6v2z" fill="currentColor"/>
  {% elif iconName == "reset" %}
    <path d="M17.65 6.35C16.2 4.9 14.21 4 12 4c-4.42 0-7.99 3.58-7.99 8s3.57 8 7.99 8c3.73 0 6.84-2.55 7.73-6h-2.08c-.82 2.33-3.04 4-5.65 4-3.31 0-6-2.69-6-6s2.69-6 6-6c1.66 0 3.14.69 4.22 1.78L13 11h7V4l-2.35 2.35z" fill="currentColor"/>
  {% elif iconName == "warning" %}
    <path d="M1 21h22L12 2 1 21zm12-3h-2v-2h2v2zm0-4h-2v-4h2v4z" fill="currentColor"/>
  {% elif iconName == "success" %}
    <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" fill="currentColor"/>
  {% elif iconName == "info" %}
    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z" fill="currentColor"/>
  {% elif iconName == "external-link" %}
    <path d="M19 19H5V5h7V3H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2v-7h-2v7zM14 3v2h3.59l-9.83 9.83 1.41 1.41L19 6.41V10h2V3h-7z" fill="currentColor"/>
  {% else %}
    {#- Default fallback icon -#}
    <rect width="24" height="24" fill="currentColor" opacity="0.3"/>
  {% endif %}
</svg>